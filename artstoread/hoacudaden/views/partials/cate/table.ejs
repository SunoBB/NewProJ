<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
               <a class="btn-primary btn" href="cate/add">Add</a>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-stripped table-hover dataTable">
                       <thead style="text-align: center;">
                            <tr>
                                <th>
                                    Tên thể loại
                                </th>
                                <th>
                                    Ảnh đại diện
                                </th>
                                
                                <th class="col-sm-3"></th>
                            </tr>
                       </thead>
                       <tbody>
                            <% for (var i = 0;i < categories.length;i++) { %>
                                <tr>
                                    <td>
                                        <%= categories[i].group %>
                                    </td>
                                    <td>
                                       <img style="width: 150px; height: 150px;" src="<%= categories[i].image %>">
                                    </td>
                                    <td>
                                        <div class="">
                                            <a class="btn-primary btn" href="cate/detail/<%= categories[i]._id %>">Edit</a>
                                            <a class="btn-danger btn" href="cate/delete/<%= categories[i]._id %>">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                       </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <% if(pages>0) {%>
        <ul class="pagination mx-auto">
            <% if (current === 1){ %>
            <li class="page-item">
                <a class="page-link" href="/cate?page=1">First</a>
            </li>
            <% } else { %>
            <li class="page-item disabled">
                <a class="page-link" href="#">First</a>
            </li>
            <% } %>
            <!--ITEM-->
            <% var i = (Number(current)>3)?(Number(current)-2):1; %>
            <% if(i!==1) { %>
                <li class="page-item disabled">
                    <a class="page-link" href="#">...</a>
                </li>
            <% } %>
            <% for(;i<=(Number(current)+2)&& i<=pages;i++) { %>
                <% if(i==current) {%>
                    <li class="page-item active">
                        <a class="page-link" href="/cate?page=<%= i %>"><%=i%></a>
                    </li>
                <% }  else { %>   
                    <li class="page-item">
                        <a class="page-link" href="/cate?page=<%= i %>"><%=i%></a>
                    </li>
                <% } %>
                <% if (i == Number(current) + 2 && i < pages) { %>
                    <li class="page-item disabled">
                      <a class="page-link" href="#">...</a>
                    </li>
                <% } %>
            <% } %>
            <!--LAST ITEM-->
            <% if(current == pages) {%>
                <li class="page-item disabled">
                    <a class="page-link" href="#">
                      Last
                    </a>
                  </li>
              <% } else { %>
                  <li class="page-item">
                    <a class="page-link" href="/cate?page=<%= pages %>/">
                      Last
                    </a>
                  </li>
            <% } %>
            <% } %>
        </ul>
</div>
