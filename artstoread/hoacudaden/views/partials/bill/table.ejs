<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">

            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-hover" id="tablePay">
                        <thead>
                           <tr>
                               <th>Mã Đơn Hàng</th>
                              <th>Tên Người Nhận</th>
                              <th>SĐT </th>
                              <th>Tổng đơn hàng</th>
                              <th>Trạng thái</th>
                           </tr>
                        </thead>
                        <tbody id="tableProduct">
                            <% outbills.forEach(element => { %>
                               <tr>
                               <td><%= element.code %></td>
                               <td><%= element.user.name %></td>
                               <td><%= element.user.phone %></td>
                               <td><%= element.totalprice %></td>
                               <% const status = ["hủy bỏ","đã tiếp nhận","đang chuẩn bị hàng","đang chuyển hàng","hoàn thành" ] ;
                                  const classStatus = ["badge badge-light","badge badge-warning","badge badge-primary","badge badge-danger"]
                               %> 
                               <td><span class="<%= classStatus[element.status] %>" ><%= status[element.status] %> </span></td>
                               <td><button type="button" class="btn btn-danger deleteOption"><a href="#">Delete</a></button></td>
                               <td><button type="button" class="btn-primary btn"><a href="<%= '/bill/detail/'+element.code %> ">Detail</a></button></td>
                           </tr>
                           <% }); %>
                           
                       </tbody>
                     </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <% if(pages>0) {%>
        <ul class="pagination mx-auto">
            <% if (current === 1){ %>
            <li class="page-item">
                <a class="page-link" href="/bill?page=1">First</a>
            </li>
            <% } else { %>
            <li class="page-item disabled">
                <a class="page-link" href="#">First</a>
            </li>
            <% } %>
            <!--ITEM-->
            <% var i = (Number(current)>3)?(Number(current)-2):1; %>
            <% if(i!==1) { %>
                <li class="page-item disabled">
                    <a class="page-link" href="#">...</a>
                </li>
            <% } %>
            <% for(;i<=(Number(current)+2)&& i<=pages;i++) { %>
                <% if(i==current) {%>
                    <li class="page-item active">
                        <a class="page-link" href="/bill?page=<%= i %>"><%=i%></a>
                    </li>
                <% }  else { %>   
                    <li class="page-item">
                        <a class="page-link" href="/bill?page=<%= i %>"><%=i%></a>
                    </li>
                <% } %>
                <% if (i == Number(current) + 2 && i < pages) { %>
                    <li class="page-item disabled">
                      <a class="page-link" href="#">...</a>
                    </li>
                <% } %>
            <% } %>
            <!--LAST ITEM-->
            <% if(current == pages) {%>
                <li class="page-item disabled">
                    <a class="page-link" href="#">
                      Last
                    </a>
                  </li>
              <% } else { %>
                  <li class="page-item">
                    <a class="page-link" href="/bill?page=<%= pages %>/">
                      Last
                    </a>
                  </li>
            <% } %>
            <% } %>
        </ul>
</div>
