<div class="container" style="min-height: 500px;">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="row">
                <div class="product-filter col-12">
                    <span class="product-filter__label" style="text-transform: uppercase;">
                        Tìm kiếm:<%= query%>
                    </span>
                </div>
                <div class="product">
                    <%if (products.length == 0 ) {%>
                        <div class="col-12" style="text-align: center;">
                            <p class="text-danger">Không tìm thấy sản phẩm</p>
                        </div>
                    <%}%>
                    <% products.forEach(product =>{%>
                        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 product-card">
                            <a href="/products/<%=product.productCode%>" class="product-item">
                                <div class="product-item__img" style="background-image: url(<%=product.images[0]%>);">
                                </div>
                                <h2 class="product-item__name">
                                    <%= product.name%>
                                </h2>
                                <div class="product-item__price">
                                    <span class="product-item__price-new">
                                        <%=product.price%>đ
                                    </span>
                                    <!-- <span class="product-item__price-old">
                                        120,000₫
                                    </span> -->
                                </div>
                                <!-- <div class="product-item__sale-off">
                                    <span class="product-item__sale-off-percent">
                                        -9%
                                    </span>
                                </div> -->
                            </a>
                        </div>
                        <%})%>
                </div>
                <div class="col-12">
                    <nav> 
                        <% if(pages>0) {%>
                        <% let link = `/search?q=${query}&page=`%>
                            <ul class="pagination home-product__pagination flex-wrap justify-content-center">
                                <% if (current === 1){ %>
                                    <li class="pagination-item">
                                        <a href="<%=link%>1" class="pagination-item__link">
                                            <i class="pagination-item__icon ti-angle-left"></i>
                                        </a>
                                    </li>
                                <% } else { %>
                                    <li class="pagnation-item disabled">
                                        <a class="pagination-item__link" href="#">First</a>
                                    </li>
                                <% } %>
                                <!--ITEM-->
                                <% var i = (Number(current)>3)?(Number(current)-2):1; %>
                                <% if(i!==1) { %>
                                    <li class="pagination-item disabled">
                                        <a class="pagination-item__link" href="#">...</a>
                                    </li>
                                <% } %>
                                <% for(;i<=(Number(current)+2)&& i<=pages;i++) { %>
                                    <% if(i==current) {%>
                                        <li class="pagination-item active">
                                            <a class="pagination-item__link" href="<%=link%><%= i %>"><%=i%></a>
                                        </li>
                                    <% }  else { %>   
                                        <li class="pagination-item">
                                            <a class="pagination-item__link" href="<%=link%><%= i %>"><%=i%></a>
                                        </li>
                                    <% } %>
                                    <% if (i == Number(current) + 2 && i < pages) { %>
                                        <li class="pagination-item disabled">
                                          <a class="pagination-item__link" href="#">...</a>
                                        </li>
                                    <% } %>
                                <% } %>
                                <!--LAST ITEM-->
                                <% if(current == pages) {%>
                                    <li class="pagination-item disabled">
                                        <a class="pagination-item__link" href="#">
                                          Last
                                        </a>
                                      </li>
                                  <% } else { %>
                                      <li class="pagination-item">
                                        <a class="pagination-item__link" href="<%=link%><%= pages %>/">
                                          Last
                                        </a>
                                      </li>
                                    </ul>
                                <% } %>    
                                <% } %>                           
                    </nav>    
                </div>
            </div>
        </div>
    </div>
</div>